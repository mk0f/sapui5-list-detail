<mvc:View
    controllerName="student.com.sap.training.advancedsapui5.listdetail.controller.Carrier"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f">
    <f:DynamicPage id="dynamicPageOverview" headerExpanded="true" toggleHeaderOnTitleClick="true">
        <f:content>
            <List id="list"
                  items="{/UX_C_Carrier_TP}"
                  busyIndicatorDelay="0"
                  growing="true"
                  growingThreshold="20"
                  growingScrollToLoad="true"
                  mode="SingleSelectMaster"
                  selectionChange=".onSelect">
                <items>
                    <ObjectListItem id="objectListItem"
                                    title="{Carrname}"
                                    intro="{Carrid}"
                                    type="Inactive">
                    </ObjectListItem>
                </items>
            </List>
        </f:content>
    </f:DynamicPage>
    <Page id="idCarrierPage" title="{i18n>overviewPageTitle}">
        <content>
        <Table id="carrierTable" items="{/UX_C_Carrier_TP}">
        
        <columns>
         
            <Column id="idcolumn" minScreenWidth="Tablet" demandPopin="true">
                <Text id="idheader" text="{i18n>columnId}"/>
            </Column>
            <Column id="namecolumn" minScreenWidth="Tablet" demandPopin="true">
                <Text id="nameheader" text="{i18n>columnName}"/>
            </Column>
      
        </columns>
      
        <items>
              <ColumnListItem id="carrcolumnListItem" press="onPress" type="Navigation">
                <cells>
                  <ObjectIdentifier id="carrobjectIdentifier" title="{Carrid}" />
                  <Text id="carrnametext" text="{Carrname}" />
                </cells> 
              </ColumnListItem>
        </items>

    

    </Table>
        </content>
    </Page>
</mvc:View>
